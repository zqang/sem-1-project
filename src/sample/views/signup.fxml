<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.SignUpController">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1440.0">
            <image>
                <Image url="@../../resources/cartoon-wallpaper-13.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="txtUsername" layoutX="522.0" layoutY="254.0" prefHeight="53.0" prefWidth="382.0" promptText="Username" style="-fx-background-radius: 30 30 30 30;">
            <font>
                <Font size="18.0" />
            </font></TextField>
        <TextField fx:id="txtEmail" layoutX="524.0" layoutY="324.0" prefHeight="53.0" prefWidth="382.0" promptText="Email" style="-fx-background-radius: 30 30 30 30;">
            <font>
                <Font size="18.0" />
            </font></TextField>
        <TextField fx:id="txtPassword" layoutX="523.0" layoutY="387.0" prefHeight="53.0" prefWidth="382.0" promptText="Password" style="-fx-background-radius: 30 30 30 30;">
            <font>
                <Font size="18.0" />
            </font></TextField>
        <Button layoutX="568.0" layoutY="558.0" mnemonicParsing="false" onMouseClicked="#login" style="-fx-background-radius: 30 30 30 30;" text="RETURN TO LOGIN PAGE">
            <font>
                <Font name="Arial Black" size="20.0" />
            </font>
        </Button>
        <Button layoutX="635.0" layoutY="490.0" mnemonicParsing="false" onMouseClicked="#signup" prefHeight="56.0" prefWidth="155.0" style="-fx-background-radius: 30 30 30 30;" text="SIGN UP">
            <font>
                <Font name="Arial Black" size="25.0" />
            </font>
        </Button>
        <Label alignment="BASELINE_RIGHT" layoutX="426.0" layoutY="85.0" text="THE CAT" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="120.0" />
            </font>
            <effect>
                <DropShadow height="97.85" radius="52.8725" width="115.64" />
            </effect>
        </Label>
        <Label fx:id="isConnected" layoutX="675.0" layoutY="448.0" text="STATUS" textFill="RED">
            <font>
                <Font name="Arial Black" size="17.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
